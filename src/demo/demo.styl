.demo {
  padding: 10px
  .pane {
    border-color: #ddd
    margin-bottom: 20px
    background-color: #fff
    border: 1px solid #ddd
    box-shadow: 0 1px 1px rgba(0,0,0,.05)
    margin-bottom: 20px
    background-color: #fff
    border-radius: 4px

    .pane-title {
      color: #333
      background-color: #f5f5f5
      border-color: #ddd
      padding: 10px 15px;
      border-bottom: 1px solid transparent;
      border-top-left-radius: 3px;
      border-top-right-radius: 3px;
    }
    .pane-body {
      padding: 15px
    }
  }
  .color-pick {
    width 12px
    height 12px
    cursor pointer
  }
  
}

  